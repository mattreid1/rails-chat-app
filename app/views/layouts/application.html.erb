<!DOCTYPE html>
<html>
  <head>
    <title><%= t("app_title") %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
	
	<script src="/assets/jquery.js" type="text/javascript"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'modernizr' %>

	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
  </head>

  <body>
  	<% if signed_in? %>
		<%= t("greetings") %>, <%= current_user.email %>.

		<% # Signs out via DELETE request to '/sign_out' %>
		<%= link_to t("sign_out"), sign_out_path, method: :delete %>
	<% else %>
		<%= t("signed_out_message") %>, <%= link_to t("sign_in"), sign_in_path %>
	<% end %>
	<hr/>

	<% flash.each do |key, value| %>
		<%= content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank? %>
	<% end %>

    <%= yield %>
  </body>
</html>
